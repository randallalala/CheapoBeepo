<!-- SHOW SHOP RESULTS AFTER SEARCHING VIEWS -->
<h3 style="text-decoration: underline;"> Businesses/Shops List </h3>
<br>
<form class="form-inline" method="post" action="/shops/review">
    <div class="container">
        <div class="row">

            <% shops.forEach(shop => {%>
            <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title" style="text-decoration: underline;"><%= shop.shopname %></h5>
                        <p class="card-text">Location: <%= shop.location %></p>
                        <a method="get" href="/shops/edit/<%= shop._id %>" style="display:inline"
                            class="btn-sm btn-info" type="submit" role="button">Edit</a>
                        <form method="POST" action="/shops/delete/<%= shop._id %>?_method=DELETE" style="display:inline">
                            <button class="btn-danger btn-sm" type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</form>
<br>
