<!-- REGISTER NEW ITEMS VIEWS -->

<form action="/create" method="post">

    <div class="form-group container"> <br>
        <h3 style="text-decoration: underline;">Register New Items</h3> <br>
        <div class="row">
            <div class="col-md-4">
                <label> Item </label>
                <input type="text" class="form-control" name="itemName" placeholder="E.g. Cheese">
                <br>
                <label> Price </label>
                <input type="number" step="0.05" class="form-control" name="price" placeholder="E.g. $2.50">
                <br>
                <label> Quantity </label>
                <input type="number" class="form-control" name="quantity" placeholder="E.g. 100grams"> <br>
                <div> <br>
                    <button class=" btn btn-primary " type="submit"> Submit </button>
                </div> <br>
            </div>
            <div class="col-md-2">
            </div>
            <div class="col-md-4">
                <div><label> Units </label><br>
                    <select name="unit">
                        <option value="">Select One</option>
                        <option value="grams">Grams</option>
                        <option value="ounces">Ounces</option>
                        <option value="millilitres">mL</option>
                        <!-- todo unit/pound/pint/gallon -->
                    </select><br><br>
                </div><br>
                <div> <label> Business/Shop </label><br>
                    <select name="shop"> 
                        <option value="">Select One</option>
                        <% shops.forEach(shop => { %>
                        <option value="<%= shop._id %>"> <%= shop.shopname %> </option>
                        <% }) %>
                    </select><br><br>
                </div><br>
                <div><label> Location </label><br>
                    <select name="location"> <br>
                        <option value="">Select One</option>
                        <% shops.forEach(shop => { %>
                        <option value="<%= shop._id %>"> <%= shop.location %> </option>
                        <% }) %>
                </div>
                </select>

            </div>
