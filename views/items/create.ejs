<!-- REGISTER NEW ITEMS VIEWS -->

<h3 style="text-decoration: underline;">Register New Items</h3>
<br>
<form action="/create" method="post">

    <div class="form-group">

        <label>Item 1 </label>
        <input type="text" class="form-control" name="itemName" placeholder="E.g. Cheese">
        <br>
        <label> Price </label>
        <input type="number" step="0.05" class="form-control" name="price" placeholder="E.g. $2.50">
        <br>
        <label> Quantity </label>
        <input type="number" class="form-control" name="quantity" placeholder="E.g. 100grams">
        <div><br>
            Units<br><select name="unit">
                <option value="">Select One</option>
                <option value="grams">Grams</option>
                <option value="ounces">Ounces</option>
                <option value="millilitres">mL</option>
                <!-- todo unit/pound/pint/gallon -->
            </select></div>
        <div><br>
            <label> Business/Shop </label><br>
            <select name="shop">
                <br>
                <option value="">Select One</option>
                <% shops.forEach(shop => { %>
                <option value="<%= shop._id %>">
                    <%= shop.shopname %>
                </option>
                <% }) %>
            </select></div>
        </div>
            <div><button class="btn btn-outline-success my-2 my-sm-0" type="submit"> Submit </button></div>
        <br>
        <div>
            <strong style="text-decoration: underline;">Conversion Reference</strong>
            <br>
            1 quart = 2 pints
            <br>
            1 gallon = 4 quarts
            <br>
            1 ounce = 28.35 grams
            <br>
            1 pound = 453.6 grams
            <br>
            1 pound = 16 ounces</div>


</form>